package pe.com.eai.money.parts;

import java.util.ArrayList;

public class MoneyParts {
	
	public static void main(String[] args) {
		build(Double.parseDouble(args[0]));
	}
public static void build(double monto) {
	ArrayList<Double>numeros=new ArrayList<Double>();
	ArrayList<Double>denominaciones=new ArrayList<Double>();
     //Denominaciones
	denominaciones.add(2.0);
	denominaciones.add(1.0);
	denominaciones.add(4.0);
System.out.println("gooo");
	Implementation(monto, numeros, 0,denominaciones);
	
}
public static double sumaArray(ArrayList<Double> numeros) {
	double sum=0;
	for(int i = 0; i < numeros.size(); i++) {
		sum += numeros.get(i);
		
	}
	
	return sum;
}
public  static void Implementation(double monto,ArrayList<Double> numeros,double suma,ArrayList<Double> denominaciones) {
	
	if((suma == sumaArray(numeros) )&& (suma==monto)) {
		System.out.println("suma final"+numeros);
	}
	else {
	
		for(int i=0;i<denominaciones.size();i++) {
		System.out.println("hol1");
		System.out.println(suma);
		
		System.out.println("i>"+i);
		suma+=denominaciones.get(i);
		System.out.println("hol2");
		System.out.println(suma+";"+monto+";"+denominaciones.get(i));
		if(suma<=monto) {
			System.out.println("hol3");
			numeros.add(denominaciones.get(i));
			System.out.println("agregado:"+denominaciones.get(i));
			Implementation(monto, numeros, suma,denominaciones);
			System.out.println("fin:"+suma);
			System.out.println("fin2:"+denominaciones.get(i));
			System.out.println("fin3:"+denominaciones.indexOf(denominaciones.get(i)));
			System.out.println(numeros);
		numeros.remove(denominaciones.indexOf(denominaciones.get(i)));
		System.out.println("pasoo");
		}
		
		suma-=denominaciones.get(i);
		System.out.println("pasoo1");
		
	}
	}
}
}
